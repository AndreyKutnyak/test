<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="@font/comfortaa_light">

    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ваш помошник в сортировке"
        android:textStyle="bold"
        android:textColor="#272727"
        android:fontFamily="@font/comfortaa_light"
        android:textSize="10dp">

    </TextView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:padding="10dp"
            >
            <TextView
            android:id="@+id/tit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Перерабатываемые\nОтходы"
                android:textSize="22dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="это вы можете положить\nв желтый сетчатый бак"
                android:layout_below="@id/tit1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:textColor="#ffff"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:maxHeight="100dp"
                android:src="@drawable/trash"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_200"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/tit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Специальная \nУтилизация"
                android:textSize="22dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="нужна спец машин\nили место сбора"
                android:layout_below="@id/tit2"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:textColor="#ffff"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:maxHeight="100dp"
                android:src="@drawable/tbo23"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_200"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/tit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Крупногабаритные\nОтходы"
                android:textSize="22dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="необходим бункерный \nнакопитель или спец.площадка"
                android:layout_below="@id/tit3"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:textColor="#ffff"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:maxHeight="100dp"
                android:src="@drawable/kont"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>